{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "jsx": "preserve",
      "moduleResolution": "node",
      "removeComments": true,
      "sourceMap": true,
      "noUnusedLocals": true,
      "strict": true,
      "baseUrl": ".",
      "typeRoots": [
        "./node_modules/@types/",
        "**/types/**/*.d.ts"
      ],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "lib": [
        "es6",
        "dom"
      ]
    },
    "exclude": [
      "**/node_modules",
      "**/__tests__"
    ]
}